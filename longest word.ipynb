   "source": [
    "def longest_word(text):\n",
    "    # Split the text into words, considering all whitespace as separators\n",
    "    words = text.split()\n",
    "    \n",
    "    # Find the longest word using the max function with key=len\n",
    "    longest = max(words, key=len)\n",
    "    \n",
    "    return longest"
   ]
  }
